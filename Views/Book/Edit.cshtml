@{
    Layout = "_Layout";
}

@model BookshelfApp.Models.Book

<h2>Edit Book</h2>

<form asp-controller="Book" asp-action="Edit" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Title</label>
        <input class="form-control" asp-for="Title" required>
        <div class="invalid-feedback">Please enter a title.</div>
    </div>
    <div class="form-group">
        <label>Author</label>
        <input class="form-control" asp-for="Author" required>
        <div class="invalid-feedback">Please enter an author.</div>
    </div>
    <div class="form-group">
        <label>Year</label>
        <input class="form-control" asp-for="Year" required>
        <div class="invalid-feedback">Please enter a valid year.</div>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-controller="Book" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
